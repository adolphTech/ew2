
<!DOCTYPE html>
<html>
<head>
  <!-- Include the Select2 CSS file -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />

  <!-- Include jQuery library -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

  <!-- Include the Select2 JS file -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.full.min.js"></script>
</head>
<body>
 <script>
    $(function() {
      // Fetch cities data from REST endpoint
      $.ajax({
        url: "/locations",
        method: "GET",
        success: function(response) {
          const cities = response; // Assuming the response is an array of cities

          $('#addEqModal').on('shown.bs.modal', function() {
            // Create options based on the array
            var options = cities.map(city => `<option value="${city}">${city}</option>`).join('');

            // Set the options in the select input
            $("#country").html(options);

            // Initialize select2 with search enabled
            $("#country").select2();
          });
        },
        error: function(error) {
          console.log(error);
        }
      });
    });
  </script>

  <div class="modal fade" id="addEqModal" tabindex="-1" aria-labelledby="addEqModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add Equipment</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="container-fluid">
            <form action="/new" method="POST" id="appForm">
              <div class="mb-3">
                <label for="assetTag" class="form-label"><strong>Asset Tag:</strong></label>
                <input class="form-control" type="text" id="assetTag" name="assetTag">
              </div>
              <div>
                <label for="serialNumber" class="form-label"><strong>Serial Number:</strong></label>
                <input type="text" class="form-control" id="serialNumber" name="serialNumber">
              </div>
              <div>
                <label for="equipmentType" class="form-label"><strong>Equipment Type:</strong></label>
                <input type="text" class="form-control" id="equipmentType" name="equipmentType">
              </div>
              <div>
                <label for="model" class="form-label"><strong>Model:</strong></label>
                <input type="text" class="form-control" id="model" name="model">
              </div>
              <div class="mb-3">
                <label for="department" class="form-label"><strong>Department:</strong></label>
                <input type="text" class="form-control" id="department" name="department">
              </div>
              <div class="mb-3 physcloc">
                <label for="country" class="form-label"><strong>Physical Location:</strong></label>
                <select class="form-control" id="country"></select>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Add Equipment</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>

