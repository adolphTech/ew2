<div
  class="modal fade"
  id="repairModal"
  tabindex="-1"
  aria-labelledby="repairModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"> Add Repair</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">

          <form action="/repair" method="POST" id="repairForm">

            <div class="mb-3">

              <div class="row">
                <div class="row">
                  <div class="col-sm-6">
                     <strong>Asset Tag:</strong>
                     <span id="randomnTag"></span>

                  </div>
                 

                <div class="col-sm-6">
                  <strong>Model:</strong>
                  <span id="randomnModel"></span>

                </div>

                
                </div>
              

              </div>
            </div>

            <div class="mb-3">

              <div class="row">
                <div class="row">
                  <div class="col-sm-6">
                     <strong>User (Name):</strong>
                     <input class="form-control" type="text" name="user" id="user" required >

                  </div>
                 

                <div class="col-sm-6">
                  <strong>ICT Officer Name:</strong>
                 <input class="form-control"  type="text" name="ictOfficer" id="ictOfficer" required>

                </div>
{{!-- todo: ict officer from login --}}
                
                </div>
              

              </div>
            </div>

            
            <div class="mb-3">
              <label for="medication" class="form-label"><strong
                >JOB (Description of work/problem):</strong></label>
              <textarea
                class="form-control"
                name="jobDescription"
                id="jobDescription"
                cols="2"
                rows="2"
                required
              ></textarea>

            <div class="mb-3">
              <input
                type="hidden"
                class="form-control"
                name="assetTag"
                id="assetTagInput"
              />

            </div>
            <div class="mb-3">
              <label for="solution" class="form-label"><strong
                >Service and Labour (Description of solution provided):</strong></label>

              <textarea
                class="form-control"
                name="solution"
                id="solution"
                cols="2"
                rows="2"
                required
              ></textarea>
            </div>

            <div class="mb-3">
              <label for="parts" class="form-label"><strong
                >Parts and Materials Used (If any):</strong></label>

              <textarea
                class="form-control"
                name="parts"
                id="parts"
                cols="1"
                rows="1"
                
              ></textarea>
            </div>

            <div class="modal-footer">

              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >Close</button>

              <button type="submit" class="btn btn-primary">Add Repair</button>
            </div>
          </form>

        


        </div>
      </div>

    </div>
  </div>
</div>