<nav class="navbar navbar-expand-sm navbar-dark bg-dark text-white container-fluid mb-3">
  <div class="container-fluid">
    <a class="navbar-brand">All Repairs</a>
    <form class="d-flex" method="post" action="/pdf">
      <div class="d-flex align-items-center">
       
        <label for="start-date" class="me-2">From:</label>
        <input id="start-date" class="form-control form-control-sm me-2" name="startDate" type="date" required placeholder="MM/DD/YYYY" aria-label="Start Date">
        
        <label for="end-date" class="me-2">To:</label>
        <input id="end-date" class="form-control form-control-sm me-2" name="endDate" type="date" required placeholder="MM/DD/YYYY" aria-label="End Date">
        
        <button class="btn btn-sm btn-outline-success" type="submit">Download</button>
      
      </div>
    </form>
  </div>
</nav>






   <div class="bg-white p-3  pt-4 ">
          
<table id="repairs-table" class="table table-responsive table-striped table-bordered responsive">
  <thead>
    <tr>
      <th class="fs-6">Asset Tag</th>
      <th class="fs-6">Date</th>
      <th class="fs-6">Area</th>
      <th class="fs-6">User</th>
      <th class="fs-6">Nature of Problem</th>
      <th class="fs-6">Solution</th>
      <th class="fs-6">ICT Officer</th>
    </tr>
  </thead>
  <tbody>
    {{#each repairs}}
    <tr>
      <td>{{this.assetTag}}</td>
      <td class="fs-6 ">{{this.date}}</td>
      <td class="fs-6">{{this.physicalLocation}}</td>
      <td class="fs-6 ">{{this.user}}</td>
      <td class="fs-6 text-center">{{this.jobDescription}}</td>
      <td class="fs-6 text-center">{{this.solution}}</td>
      <td class="fs-6 text-center">{{this.ictOfficer}}</td> 
    </tr>
    {{/each}}
  </tbody>
</table>

